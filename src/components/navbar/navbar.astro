---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "LinkedIn",
    path: "https://www.linkedin.com/in/oleh-davydov/",
  },
  {
    title: "GitHub",
    path: "https://github.com/oleh-davydov",
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600">
                      <span class="hover:bg-black hover:text-white hover:px-3 underline text-xl"> {item.title}</span>
                    </a>
                  </li>
              </>
            ))
          }
        </ul>
        
      </MenuItems>
    </Astronav>
  </header>
</Container>
